def celsius_to_fahrenheit(celsius):
    return (celsius * 9/5) + 32

def fahrenheit_to_celsius(fahrenheit):
    return (fahrenheit - 32) * 5/9

option = int(input("Выберите опцию:\n1. Перевод из Цельсия в Фаренгейт\n2. Перевод из Фаренгейта в Цельсий: "))
temperature = float(input("Введите температуру: "))

if option == 1:
    converted_temperature = celsius_to_fahrenheit(temperature)
    print(f"Температура в Фаренгейтах: {converted_temperature}")
elif option == 2:
    converted_temperature = fahrenheit_to_celsius(temperature)
    print(f"Температура в Цельсиях: {converted_temperature}")
else:
    print("Неверная опция.")
